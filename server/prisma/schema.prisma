// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Mesa {
  id         String @id @default(uuid())
  numeroMesa Int    @unique
  assentos   Int

  @@map("MESA")
}

model Pedido {
  id          String       @id @default(uuid())
  itensPedido ItemPedido[]
  contaId     String
  Conta       Conta        @relation(fields: [contaId], references: [id])

  @@map("PEDIDO")
}

model ItemPedido {
  id             Int          @id @default(autoincrement())
  quantidade     Int
  itemCardapio   ItemCardapio @relation(fields: [itemCardapioId], references: [id])
  itemCardapioId Int          @unique
  Pedido         Pedido       @relation(fields: [pedidoId], references: [id])
  pedidoId       String

  @@map("ITEM_PEDIDO")
}

model Conta {
  id               String   @id @default(uuid())
  assentosOcupados Int
  horaAbertura     DateTime @default(now())
  horaDoFechamento String
  status           Int
  pedidos          Pedido[]

  @@map("CONTA")
}

model ItemCardapio {
  id         Int         @id @default(autoincrement())
  nome       String
  descricao  String
  preco      Int
  quantidade Int
  imagem     String
  categoria  String
  Cardapio   Cardapio?   @relation(fields: [cardapioId], references: [id])
  cardapioId String?
  ItemPedido ItemPedido?

  @@map("ITEM_CARDAPIO")
}

model Cardapio {
  id            String         @id @default(uuid())
  itensCardapio ItemCardapio[]
}

model Usuario {
  id    String @id @default(uuid())
  nome  String
  email String
  senha String
  cargo Int

  @@map("USUARIO")
}

model Venda {
  id String @id @default(uuid())

  @@map("Venda")
}

model Login{
  id Int @id @default(autoincrement())
  nome String
  senha String

   @@map("Login")
}